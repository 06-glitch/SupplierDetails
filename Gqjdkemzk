noSELECT DISTINCT
    op.Mfg_Order_Nbr,
    im.MMM_Id_Nbr,
    im.Analytical_Family_Code,
    im.Row_Changed_Person_Id
FROM t_mfg_order_operation AS op
JOIN t_Mfg_Order_Output AS o
    ON op.Mfg_Order_Nbr = o.Mfg_Order_Nbr
JOIN t_Item_Master AS im
    ON o.MMM_Id_Nbr = im.MMM_Id_Nbr
WHERE op.Mfg_Order_Oper_Status_Code IN ('SCHEDULED', 'ACTIVE', 'FIRMED')
  AND op.CIDS_Seg_Cond_Code = 'D'
  AND op.Accounting_Control_Code = '5'
ORDER BY op.Mfg_Order_Nbr, im.MMM_Id_Nbr;



SELECT DISTINCT
    op.Mfg_Order_Nbr,
    im.MMM_Id_Nbr,
    im.Analytical_Family_Code,
    im.Row_Changed_Person_Id
FROM t_mfg_order_operation AS op
JOIN t_Mfg_Order_BOM_Component AS bc
    ON op.Mfg_Order_Nbr = bc.Mfg_Order_Nbr
JOIN t_Item_Master AS im
    ON bc.MMM_Id_Nbr = im.MMM_Id_Nbr
WHERE op.Mfg_Order_Oper_Status_Code IN ('SCHEDULED', 'ACTIVE', 'FIRMED')
  AND op.CIDS_Seg_Cond_Code = 'D'
  AND op.Accounting_Control_Code = '5'
ORDER BY op.Mfg_Order_Nbr, im.MMM_Id_Nbr;



SELECT DISTINCT
    b.BOM_Nbr,
    im.MMM_Id_Nbr,
    im.Analytical_Family_Code,
    im.Row_Changed_Person_Id
FROM t_BOM AS b
JOIN t_Item_Master AS im
    ON b.MMM_Id_Nbr = im.MMM_Id_Nbr
WHERE b.CIDS_Seg_Cond_Code = 'D'
  AND b.Accounting_Control_Code = '5'
  AND b.Row_Stat_Cd = 'ACTIVE';

SELECT DISTINCT
    bo.BOM_Nbr,
    im.MMM_Id_Nbr,
    im.Analytical_Family_Code,
    im.Row_Changed_Person_Id
FROM t_BOM_Output AS bo
JOIN t_Item_Master AS im
    ON bo.MMM_Id_Nbr = im.MMM_Id_Nbr
WHERE bo.CIDS_Seg_Cond_Code = 'D'
  AND bo.Accounting_Control_Code = '5'
  AND bo.Row_Stat_Cd = 'ACTIVE';

SELECT DISTINCT
    bc.BOM_Nbr,
    im.MMM_Id_Nbr,
    im.Analytical_Family_Code,
    im.Row_Changed_Person_Id
FROM t_BOM_Component AS bc
JOIN t_Item_Master AS im
    ON bc.MMM_Id_Nbr = im.MMM_Id_Nbr
WHERE bc.CIDS_Seg_Cond_Code = 'D'
  AND bc.Accounting_Control_Code = '5'
  AND bc.Row_Stat_Cd = 'ACTIVE';


